#!/bin/sh
source $1
ENVIRONMENT_SRC=$1
SLIM_PORT=$2
APPLICATION_PATH=${TARGET_BUILD_DIR}/${EXECUTABLE_PATH}

run_test_system() {
	log "Test System Executable Folder Path: $APPLICATION_PATH"
	$APPLICATION_PATH $SLIM_PORT
	return $?
}

main() {
	log "== RunSlimTestTargetWithSlimPort~OSX:$SLIM_PORT =="
	run_test_system
	exit $?
}

log() {
	echo "[OCSP_RUN]: INFO $1"
}

error() {
	>&2 echo "[OCSP_RUN]: ERROR $1"
	exit 1
}

main
